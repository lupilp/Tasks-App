<div class="form-container-edit">

  <div class="form-text">
    <div class="icon-text"></div>
    Edit your task
  </div>

  <form action="/edit/{{task._id}}" method="POST" class="form-create-task">

    <input
      type="text"
      name="title"
      placeholder="Title"
      value="{{task.title}}"
      class="form-title"
    />

    <textarea
      name="description"
      rows="3"
      placeholder="Description"
      class="form-description"
    >{{task.description}}</textarea>

    <button class="form-button">Update</button>

  </form>
</div>