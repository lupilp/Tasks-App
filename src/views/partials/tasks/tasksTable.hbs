{{#if tasks}}
  {{#each tasks}}
    <div class="table-general">

      <div>

        <div class="table-title">
          {{title}}
        </div>
        <div class="table-description">
          {{description}}
        </div>
      </div>
      <div class="operations">

        {{#if done}}
          <a href="/toggleDone/{{_id}}">Undone</a>
        {{else}}
          <a href="/toggleDone/{{_id}}">Done</a>
        {{/if}}

        <a href="/delete/{{_id}}">Delete</a>
        <a href="/edit/{{_id}}">Update</a>
      </div>
    </div>
  {{/each}}
{{else}}
  <div>No Tasks</div>
{{/if}}